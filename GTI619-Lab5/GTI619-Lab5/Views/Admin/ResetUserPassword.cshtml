@model GTI619_Lab5.Models.Admin.ResetUserPasswordModel

@{
    ViewBag.Title = "ResetUserPassword";
}

<h2>Reset the password of @Model.Username</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.Username)

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-xs-12">
                <div class="alert alert-info">
                    <p>Enter your password to reset the password of '@(Model.Username)'</p>
                </div>
            </div>
        </div>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})

        <div class="form-group">

            @Html.LabelFor(model => model.AdminPassword, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.PasswordFor(model => model.AdminPassword, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.AdminPassword, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Reset Password" class="btn btn-primary"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Cancel", "Index")
</div>
